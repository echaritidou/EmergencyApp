<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6993A6"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY APP"
        android:textColor="#BC1717"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit2"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#BF4949"
        android:drawableStart="@android:drawable/ic_dialog_info"
        android:onClick="goReg"
        android:text="Register/Sign in"
        android:textAlignment="center"
        android:textSize="10sp"
        app:icon="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button11"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:layout_marginTop="292dp"
        android:backgroundTint="#BF4949"
        android:drawableStart="@android:drawable/ic_dialog_info"
        android:text="Update profile"
        android:textAlignment="center"
        android:textSize="10sp"
        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:layout_marginTop="384dp"
        android:backgroundTint="#BF4949"
        android:drawableStart="@android:drawable/ic_dialog_info"
        android:onClick="goEdit"
        android:text="Edit Contacts"
        android:textAlignment="center"
        android:textSize="10sp"
        app:icon="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="179dp"
        android:layout_height="45dp"
        android:layout_marginTop="204dp"
        android:backgroundTint="#BF4949"
        android:drawableStart="@android:drawable/ic_dialog_info"
        android:text="Instructions"
        android:textAlignment="center"
        android:textSize="10sp"
        app:icon="@android:drawable/ic_dialog_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>